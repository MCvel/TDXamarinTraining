<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="XTManual.Login">
	<ContentPage.Content>
		<ScrollView>
			<StackLayout Spacing="2" 
				Padding="0, 20, 0, 0"
               VerticalOptions = "Start" 
               BackgroundColor="White" 
               HorizontalOptions="FillAndExpand">
               <StackLayout Orientation="Vertical" Padding="0, 10, 0, 0" Spacing="5" HorizontalOptions="Center">
					<Label Text="User Registration" HorizontalOptions="Center"></Label>
					<Entry Placeholder="User Name" WidthRequest="200"></Entry>
					<Entry Placeholder="User Email" WidthRequest="200"></Entry>
					<Entry Placeholder="Phone Number" WidthRequest="200"></Entry>
					<Button Text="Register"></Button>
				</StackLayout>
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>
